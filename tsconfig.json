{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@libs/math": [
        "libs/math/src"
      ],
      "@libs/math/*": [
        "libs/math/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
